<!-- Create the database -->
CREATE DATABASE armor;

<!-- Choose the database -->
USE armor;

<!-- Create the table -->
CREATE TABLE armor (
  id INT PRIMARY KEY,
  name VARCHAR(50) NOT NULL,
  type VARCHAR(20) NOT NULL
);

<!--Insert data for light armor -->
INSERT INTO armor (id, name, type)
VALUES 
(1, 'Padded', 'Light Armor'),
(2, 'Leather', 'Light Armor'),
(3, 'Studded Leather', 'Light Armor');

<!-- Insert data for medium armor -->
INSERT INTO armor (id, name, type)
VALUES 
