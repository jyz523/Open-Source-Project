(11, 'Splint', 'Heavy Armor'),
(12, 'Plate', 'Heavy Armor');
(13, 'None');


<!--Create the table for shields -->
CREATE TABLE shield (
  id INT PRIMARY KEY,
  name VARCHAR(50) NOT NULL
);

<!-- Insert data for shields -->
INSERT INTO shield (id, name)
