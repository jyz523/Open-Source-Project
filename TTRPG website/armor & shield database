(5, 'Chain Shirt', 'Medium Armor'),
(6, 'Scale Mail', 'Medium Armor'),
(7, 'Breastplate', 'Medium Armor'),
(8, 'Half Plate', 'Medium Armor');

<!-- Insert data for heavy armor -->
