<!-- locate to your apache2 files -->
cd /etc/apache2/site-avaliable/

<!-- find your conf file -->
ls

<!-- edit conf file -->
sudo nano (filename).com.conf

<!-- type these below in conf flie -->
<VirtualHost *:80>
	ServerAdmin admin(admin name)@(filename).com
	ServerName (filename).com
	ServerAlias www.(file name).com
	DocumentRoot /var/www/(filename)
	ErorLog ${APACHE_LOG_DIR}/error.log
	CustomLog ${APACHE_LOG_DIR}/access.log combined
<Location />
	AuthType Basic
	AuthName “Restricted Access”
	AuthuserFile /etc/apache2/.htpasswd
	Require valid-user
</location>
</VirtualHost>

<!-- write out&save -->
Save the changes by pressing Ctrl + O,then press Enter to confirm the filename, and exit Nano by pressing Ctrl + X

<!-- creating a symbolic link to the sites-enabled directory -->
sudo ln -s /etc/apache2/sites-available/(filename).com.conf /etc/apache2/sites-enabled/

<!-- restart apache2 -->
sudo systemctl restart apache2

<!-- Create a user’username and password -->
sudo htpasswd -c /etc/apache/.htpasswd (username)

<!-- ERROR if dont have '.htpasswd' file -->
sudo apt-get install apache2-utils

<!-- restart apache2 -->
sudo systemctl restart apache2
